# Emacs client
export EDITOR=~/bin/edit.sh
export ALTERNATE_EDITOR=emacs 
export VISUAL=$EDITOR

alias e="~/bin/edit.sh"

## Setup proper term information for emacs ansi-term mode
[[ $TERM == eterm-color ]] && export TERM=xterm

# {{{ Emacs compatibility
  
  ## FAQ 3.10: Why does zsh not work in an Emacs shell mode any more?
  ## http://zsh.sourceforge.net/FAQ/zshfaq03.html#l26
  [[ $EMACS = t ]] &amp;&amp; unsetopt zle
  
  # Enable emacs keymap
  bindkey -e
  
  # From resolve (http://repose.cx/conf/.zshrc)
  WORDCHARS='*?_-[]~=&;!#$%^(){}<>'                    # Emacs compatible M-b and M-f
  bindkey "\C-w" kill-region      # Emacs C-w command support
  
  # }}}
