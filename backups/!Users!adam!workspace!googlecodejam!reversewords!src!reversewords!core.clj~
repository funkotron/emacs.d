(ns reversewords.core)

(def infile  "B-small-practice.in")

(def outfile (str (first (clojure.string/split infile #"\.")) ".out"))

(defn input
  "Read in the test cases"
  [x]
  (clojure.string/split (slurp x) #"\n"))

(defn tcs [] (rest (input infile)))

(defn rev [tc] (clojure.string/join " " (reverse (clojure.string/split tc #"\s"))))

(defn solutions [] (map rev (tcs)))

(defn solve [] (try (clojure.java.io/delete-file outfile) (catch Exception e))
  (doseq [[i solution] (map-indexed vector (solutions))]
    (spit outfile (format "Case #%d: %s\n" (inc i) solution) :append true
          )))
